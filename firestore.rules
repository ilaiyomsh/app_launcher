rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /snippets/{snippetId} {
      // קריאה - כולם יכולים לקרוא כלים (public)
      allow read: if true;
      
      // יצירה - רק משתמשים מחוברים יכולים ליצור
      // ה-author חייב להיות שווה למייל של המשתמש המחובר
      allow create: if request.auth != null
        && request.resource.data.name is string
        && request.resource.data.code is string
        && request.resource.data.author is string
        && request.resource.data.author == request.auth.token.email;
      
      // עדכון - רק יוצר הכלי או Admin יכולים לעדכן
      // Admin: ilai@twyst.co.il (מוגדר ב-AuthContext.tsx)
      // ניתן להוסיף עוד Admins ב-AuthContext.tsx
      allow update: if request.auth != null
        && (resource.data.author == request.auth.token.email
            || request.auth.token.email == 'ilai@twyst.co.il'
            || request.auth.token.email.matches('.*@yourdomain\\.com$')); // Admin emails נוספים
      
      // מחיקה - רק יוצר הכלי או Admin יכולים למחוק
      // Admin: ilai@twyst.co.il (מוגדר ב-AuthContext.tsx)
      allow delete: if request.auth != null
        && (resource.data.author == request.auth.token.email
            || request.auth.token.email == 'ilai@twyst.co.il'
            || request.auth.token.email.matches('.*@yourdomain\\.com$')); // Admin emails נוספים
    }
  }
}

